<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivEmas"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:background="@color/black"
        android:src="@drawable/emas_batangan"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Update Harga Emas"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivEmas"
        app:layout_constraintTop_toTopOf="@+id/ivEmas" />

    <TextView
        android:id="@+id/tvJenisEmas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Emas Batangan"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/tvJudul"
        app:layout_constraintTop_toBottomOf="@id/tvJudul" />

    <TextView
        android:id="@+id/tvHargaEmas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Rp 1.000.000/gr"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvJenisEmas"
        app:layout_constraintTop_toBottomOf="@id/tvJenisEmas" />

    <TextView
        android:id="@+id/tvTglUpdateHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 Juli 1994"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivEmas"
        app:layout_constraintStart_toStartOf="@id/tvHargaEmas" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivEmas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/plcJenisZakat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jenis_zakat"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/divider"
        app:layout_constraintEnd_toEndOf="@id/divider"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnZakatPenghasilan"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:text="@string/zakat_penghasilan"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@id/plcJenisZakat" />

</androidx.constraintlayout.widget.ConstraintLayout>